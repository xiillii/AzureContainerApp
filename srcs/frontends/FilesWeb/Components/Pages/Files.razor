@page "/files"
@rendermode InteractiveServer
@using FilesWeb.Services
@using Shared.Models
@using Microsoft.AspNetCore.Components.Forms
@inject FilesApiClient FilesApi
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Files</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Files</h2>
        <div>
            <button class="btn btn-primary me-2" @onclick="ShowUploadForm">
                <i class="bi bi-cloud-upload"></i> Upload File
            </button>
            <button class="btn btn-outline-secondary" @onclick="Logout">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (showUploadForm)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Upload File</h5>
                <div class="mb-3">
                    <label class="form-label">Select File</label>
                    <InputFile OnChange="@HandleFileSelected" class="form-control" accept="*/*" />
                    @if (selectedFile != null)
                    {
                        <small class="text-muted">Selected: @selectedFile.Name (@FormatFileSize(selectedFile.Size))</small>
                    }
                </div>

                <div>
                    <button class="btn btn-success me-2" @onclick="UploadFile" disabled="@(isUploading || selectedFile == null)">
                        @if (isUploading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Upload
                    </button>
                    <button class="btn btn-secondary" @onclick="CancelUpload">Cancel</button>
                </div>
            </div>
        </div>
    }

    @if (isLoading && files == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (files == null || !files.Any())
    {
        <div class="alert alert-info">
            No files yet. Click "Upload File" to get started!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Size</th>
                        <th>Content Type</th>
                        <th>Uploaded</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in files.OrderByDescending(f => f.UploadedAt))
                    {
                        <tr>
                            <td>
                                <i class="bi bi-file-earmark"></i>
                                @file.FileName
                            </td>
                            <td>@FormatFileSize(file.FileSize)</td>
                            <td><span class="badge bg-secondary">@file.ContentType</span></td>
                            <td>@file.UploadedAt.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => DownloadFile(file)">
                                    <i class="bi bi-download"></i> Download
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteFile(file.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<FileMetadata>? files;
    private IBrowserFile? selectedFile;
    private bool showUploadForm;
    private bool isLoading;
    private bool isUploading;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadFiles();
    }

    private async Task LoadFiles()
    {
        isLoading = true;
        files = await FilesApi.GetFilesAsync();
        isLoading = false;

        if (files == null)
        {
            errorMessage = "Failed to load files. Please check your connection.";
        }
    }

    private void ShowUploadForm()
    {
        showUploadForm = true;
        selectedFile = null;
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
    }

    private async Task UploadFile()
    {
        if (selectedFile == null) return;

        isUploading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10MB max
            var success = await FilesApi.UploadFileAsync(stream, selectedFile.Name);

            if (success)
            {
                successMessage = $"File '{selectedFile.Name}' uploaded successfully!";
                showUploadForm = false;
                selectedFile = null;
                await LoadFiles();
            }
            else
            {
                errorMessage = "Failed to upload file. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Upload failed: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private void CancelUpload()
    {
        showUploadForm = false;
        selectedFile = null;
    }

    private async Task DownloadFile(FileMetadata file)
    {
        try
        {
            var stream = await FilesApi.DownloadFileAsync(file.Id);
            if (stream != null)
            {
                using var streamRef = new DotNetStreamReference(stream: stream);
                await JSRuntime.InvokeVoidAsync("downloadFileFromStream", file.FileName, streamRef);
                successMessage = $"File '{file.FileName}' downloaded successfully!";
            }
            else
            {
                errorMessage = "Failed to download file.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Download failed: {ex.Message}";
        }
    }

    private async Task DeleteFile(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this file?"))
            return;

        isLoading = true;
        var success = await FilesApi.DeleteFileAsync(id);
        isLoading = false;

        if (success)
        {
            successMessage = "File deleted successfully!";
            await LoadFiles();
        }
        else
        {
            errorMessage = "Failed to delete file. Please try again.";
        }
    }

    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/login");
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
